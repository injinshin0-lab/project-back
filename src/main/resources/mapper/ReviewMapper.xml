<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.kosmo.project_back.review.mapper.ReviewMapper">

    <!-- 상품별 리뷰 조회 -->
    <select id="findReviewsByProductId"
            parameterType="int"
            resultType="kr.co.kosmo.project_back.review.dto.response.ReviewResponseDto">
        SELECT 
            id          AS reviewId,
            user_id     AS userId,
            content,
            rating,
            created_at  AS createdAt 
        FROM Bg_Review 
        WHERE product_id = #{productId}
        ORDER BY 
        <choose>
            <when test="sort == 'rating'">
                rating DESC
            </when>
            <otherwise>
                created_at DESC 
            </otherwise>
        </choose>
    </select>

    <!-- 리뷰 작성 -->
    <insert id="insertReview"
            parameterType="kr.co.kosmo.project_back.review.vo.ReviewVO"
            useGeneratedKeys="true"
            keyProperty="reviewId">
        INSERT INTO Bg_Review (
            user_id,
            product_id,
            content,
            rating,
            created_at
        )
        VALUES (
            #{userId},
            #{productId},
            #{content},
            #{rating},
            CURRENT_TIMESTAMP
        )
    </insert>

    <!-- 리뷰 수정 -->
    <update id="updateReview"
            parameterType="kr.co.kosmo.project_back.review.vo.ReviewVO">
        UPDATE Bg_Review
        SET
            content = #{content},
            rating = #{rating},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{reviewId}
    </update>

    <!-- 리뷰 삭제 -->
    <delete id="deleteReview"
            parameterType="kr.co.kosmo.project_back.review.vo.ReviewVO">
        DELETE FROM Bg_Review
        WHERE id = #{reviewId}
    </delete>

</mapper>


