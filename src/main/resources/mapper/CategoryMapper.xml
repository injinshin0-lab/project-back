<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kosmo.project_back.user.mapper.CategoryMapper">

    <!-- 전체 카테고리 -->
    <select id="findAllCategories"
            resultType="kr.co.kosmo.project_back.user.vo.CategoryVO">
        SELECT
            id,
            category_name,
            parent_id,
            depth
        FROM Bg_Interest_category
        ORDER By depth, parent_id, id
    </select>

    <!-- 소분류만 -->
    <select id="findLeafCategories"
            resultType="kr.co.kosmo.project_back.user.vo.CategoryVO">
        SELECT
            id,
            category_name,
            parent_id,
            depth
        FROM Bg_Interest_category
        WHERE depth = 3
        ORDER By id
    </select>
</mapper>
