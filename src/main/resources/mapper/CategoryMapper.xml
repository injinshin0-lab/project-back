<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kosmo.project_back.user.mapper.CategoryMapper">

    <!-- 전체 카테고리 -->
    <select id="findCategories"
            resultType="kr.co.kosmo.project_back.user.vo.CategoryVO">
        SELECT
            id,
            category_name  AS categoryName,
            parent_id      AS parentId,
            depth
        FROM Bg_Interest_category
        ORDER By depth, parent_id, id
    </select>

</mapper>
