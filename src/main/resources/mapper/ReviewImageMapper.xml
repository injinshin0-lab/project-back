<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.kosmo.project_back.user.mapper.ReviewImageMapper">

    <select id="findByReviewId" parameterType="int"
            resultType="kr.co.kosmo.project_back.user.dto.ReviewImageDto">
        SELECT
            id AS reviewImageId,
            image_url AS imageUrl
        FROM Bg_Review_Image
        WHERE review_id = #{reviewId}
    </select>

    <insert id="insertReviewImage">
        INSERT INTO Bg_Review_Image (review_id, image_url)
        VALUES (#{reviewId}, #{imageUrl})
    </insert>

</mapper>


