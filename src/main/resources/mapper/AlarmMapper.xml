<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.kosmo.project_back.alarm.mapper.AlarmMapper">

    <!-- 알림 조회 -->
    <select id="findAlarmsByUserId"
            parameterType="int"
            resultType="kr.co.kosmo.project_back.alarm.dto.AlarmDto">
        SELECT
            id,
            user_id     AS userId,
            type,
            message
        FROM Bg_Alarm 
        WHERE user_id = #{userId} 
        ORDER BY id DESC
    </select>

    <!-- 알림 삭제 -->
    <delete id="deleteAlarm" parameterType="int">
        DELETE FROM Bg_Alarm
        WHERE id = #{alarmId} 
    </delete>
    
    <!-- 알림 생성 -->
    <insert id="insertAlarm" parameterType="kr.co.kosmo.project_back.alarm.dto.AlarmDto">
        INSERT INTO Bg_Alarm (user_id, type, message)
        VALUES (#{userId}, #{type}, #{message})
    </insert>











</mapper>